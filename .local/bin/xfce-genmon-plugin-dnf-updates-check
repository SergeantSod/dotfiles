#!/bin/bash
dnf check-update > /dev/null
if [ $? -eq 100 ]
then
  echo "<img>/usr/share/icons/matefaenza/actions/16/package-upgrade.png</img><tool>Package upgrades available.</tool><click>gpk-update-viewer</click>"
else
  echo "<img>/usr/share/icons/matefaenza/actions/24/package-install.png</img><tool>Packages are up to date.</tool>"
fi
